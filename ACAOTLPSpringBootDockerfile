FROM alpine:latest as maven-builder
ARG PROJECT_NAME
ARG TAG_NAME
ENV PROJECT_NAME=${PROJECT_NAME}
ENV TAG_NAME=${TAG_NAME}

RUN apk update
RUN if echo $TAG_NAME | grep -q "spring-boot-log4j2-11" ; then \
         apk add --no-cache openjdk11 && apk add --no-cache maven; \
    elif echo $TAG_NAME | grep -q "spring-boot-log4j2-17" ; then \
         apk add --no-cache openjdk17 && apk add --no-cache maven; \
    elif echo $TAG_NAME | grep -q "spring-boot-log4j2-21" ; then \
         apk add --no-cache openjdk21 && apk add --no-cache maven; \
    else \
         apk add --no-cache openjdk8 && apk add --no-cache maven; \
    fi

COPY . /app
WORKDIR /app
RUN mvn clean install -pl ACA-Java-Agent-Log-Level/${PROJECT_NAME} -DskipTests

FROM maven:3-eclipse-temurin-21-alpine
ARG PROJECT_NAME
ENV PROJECT_NAME=${PROJECT_NAME}
COPY --from=maven-builder app/ACA-Java-Agent-Log-Level/${PROJECT_NAME}/target/*.jar /app-service/app.jar
WORKDIR /app-service
RUN wget https://huiagentaccount.blob.core.windows.net/ja-agent/ja-agent.jar
RUN wget https://huiagentaccount.blob.core.windows.net/opentelemetry-javaagent/opentelemetry-javaagent.jar
EXPOSE 8080
ENTRYPOINT ["java", "-javaagent:ja-agent.jar", "-javaagent:opentelemetry-javaagent.jar", "-jar", "app.jar"]
