FROM alpine:latest as maven-builder
ARG PROJECT_NAME
ENV PROJECT_NAME=${PROJECT_NAME}

RUN apk update
RUN if echo $PROJECT_NAME | grep -q "quarkus-logback-11" ; then \
         apk add --no-cache openjdk11 && apk add --no-cache maven; \
    elif echo $PROJECT_NAME | grep -q "quarkus-logback-17" ; then \
         apk add --no-cache openjdk17 && apk add --no-cache maven; \
    elif echo $PROJECT_NAME | grep -q "quarkus-logback-21" ; then \
         apk add --no-cache openjdk21 && apk add --no-cache maven; \
    fi

COPY . /app
WORKDIR /app
RUN mvn clean install -pl ACA-Java-Agent-Log-Level/quarkus-logback -DskipTests

FROM maven:3-eclipse-temurin-11-alpine
WORKDIR /app
ARG PROJECT_NAME
ARG ACA_COMMAND_LINE
ENV PROJECT_NAME=${PROJECT_NAME}
# copy arthas
COPY --from=hengyunabc/arthas:latest /opt/arthas /opt/arthas
COPY --from=maven-builder app/ACA-Java-Agent-Log-Level/quarkus-logback/target/*.jar /app-service/target/quarkus-logback-1.0.0-runner.jar

RUN apk add wget unzip tcpdump ngrep iproute2-ss bind-tools

COPY ./ /app-service
WORKDIR /app-service
RUN wget https://huiagentaccount.blob.core.windows.net/ja-agent/agent-0.0.1-SNAPSHOT.jar

ENTRYPOINT ["sh", "-c"]
CMD ["java -javaagent:agent-0.0.1-SNAPSHOT.jar -Xms256m -Xmx256m -jar /app-service/target/quarkus-logback-1.0.0-runner.jar"]
